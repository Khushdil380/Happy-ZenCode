{
  "name": "happy-zencode",
  "displayName": "Happy Zencode",
  "description": "A comprehensive VS Code customization extension with themes and background images",
  "version": "1.0.7",
  "publisher": "khushdil-ansari",
  "repository": {
    "type": "git",
    "url": "https://github.com/Khushdil380/Happy-ZenCode"
  },
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Themes",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "happy-zencode.install",
        "title": "Install",
        "category": "Happy Zencode"
      },
      {
        "command": "happy-zencode.uninstall",
        "title": "Uninstall",
        "category": "Happy Zencode"
      },
      {
        "command": "happy-zencode.reload",
        "title": "Reload",
        "category": "Happy Zencode"
      },
      {
        "command": "happy-zencode.showStatus",
        "title": "Show Status",
        "category": "Happy Zencode"
      },
      {
        "command": "happy-zencode.addImage",
        "title": "Add Background Image",
        "category": "Happy Zencode"
      },
      {
        "command": "happy-zencode.removeImage",
        "title": "Remove Background Image",
        "category": "Happy Zencode"
      },
      {
        "command": "happy-zencode.selectTheme",
        "title": "Select Built-in Theme",
        "category": "Happy Zencode"
      },
      {
        "command": "happy-zencode.openSettings",
        "title": "Open Background Settings",
        "category": "Happy Zencode"
      },
      {
        "command": "happy-zencode.applyThemeToEditor",
        "title": "Apply Theme to Editor Only",
        "category": "Happy Zencode"
      },
      {
        "command": "happy-zencode.applyThemeToAll",
        "title": "Apply Theme to All Sections",
        "category": "Happy Zencode"
      },
      {
        "command": "happy-zencode.previewTheme",
        "title": "Preview Theme Gallery",
        "category": "Happy Zencode"
      }
    ],
    "configuration": {
      "title": "Happy Zencode Background",
      "properties": {
        "background.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable background images in VS Code"
        },
        "background.autoInstall": {
          "type": "boolean",
          "default": true,
          "description": "Automatically install background patches on startup and configuration changes"
        },
        "background.editor": {
          "type": "object",
          "default": {
            "images": [],
            "opacity": 0.1,
            "useFront": true,
            "style": {},
            "styles": [],
            "interval": 0,
            "random": false
          },
          "properties": {
            "images": {
              "type": "array",
              "default": [],
              "items": {
                "type": "string"
              },
              "description": "Your custom images, support https and file protocol"
            },
            "opacity": {
              "type": "number",
              "default": 0.1,
              "minimum": 0,
              "maximum": 1,
              "description": "Opacity of background images"
            },
            "useFront": {
              "type": "boolean",
              "default": true,
              "description": "Place image above or below code"
            },
            "style": {
              "type": "object",
              "default": {},
              "description": "Custom style for images"
            },
            "styles": {
              "type": "array",
              "default": [],
              "items": {
                "type": "object"
              },
              "description": "Individual styles for each image"
            },
            "interval": {
              "type": "number",
              "default": 0,
              "description": "Carousel interval in seconds"
            },
            "random": {
              "type": "boolean",
              "default": false,
              "description": "Random image display"
            }
          },
          "description": "Editor background configuration"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^18.x",
    "@types/vscode": "^1.104.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "glob": "^10.0.0"
  }
}
